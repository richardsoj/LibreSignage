{
	"$ref": "#/definitions/full",

	"definitions": {
		"full": {
			"type": "object",
			"properties": {
				"groups": {
					"type": "array",
					"items": { "$ref": "#/definitions/group" }
				},
				"quota": { "$ref": "file://quota.schema.json#/definitions" },
				"sessions": {
					"type": "array",
					"items": { "$ref": "file://session.schema.json#/definitions/full" }
				},
				"user": { "$ref": "#/definitions/name" }
			},
			"required": ["groups", "quota", "sessions", "user"],
			"additionalProperties": false
		},
		"name": {
			"type": "string",
			"pattern": "^[A-Za-z0-9_-]+$"
		},
		"group": {
			"type": "string",
			"pattern": "^[A-Za-z0-9_-]+$"
		}
	}
